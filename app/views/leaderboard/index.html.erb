<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1><strong>Leaders</strong></h1>
    </div>
  </div>
  <div class="row">
    <div class="<%= (user_signed_in?) ? 'col-8' : 'col-12' %>">
      <% @leaders.each.with_index do |leader, index| %>
        <ul class="list-group">
          <li class="list-group-item list-group-item-primary d-flex justify-content-between">
            <strong><%= index + 1 %> âœ¦   <%= leader[:user].full_name %></strong>
            <%= number_with_delimiter leader[:points].to_i %> points
          </li>
        </ul>
        <br>
      <% end %>
    </div>
    <% if user_signed_in? %>
      <div  class="col-4 center-text">
        <div id="user-points" class="row justify-content-center">
          <br>
          <h1><strong>YOU</strong></h1>
          <p><%= number_with_delimiter @current_user_points.to_i %><strong> points</strong></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
