


<div class="container">
  <center><h2>Sign In!</h2></center>

  <%= form_for :session, url: session_path do |f| %>

  <div class="form-group sign-in-form p-2">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
  </div>

  <div class="form-group sign-in-form p-2">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
  </div>

  <div class="form-input justify-content-center sign-in-form">
    <%= f.submit "Sign In", class: "btn btn-outline-secondary sign-in-form", placeholder: 'Submit' %>
  </div>

  <div class="d-flex justify-content-between sign-in-form ">
    <%= link_to "Forgot password?", new_password_reset_path, class: "sign-in-form-link"%>
    <%= link_to "Don't have an account? Sign Up", new_user_path, class: "sign-in-form-link" %>
  </div>

<% end %>
</div>
