
<div class="container-fluid">
  <h1>Sign In</h1>
  <%= form_for :session, url: session_path do |f| %>
  <div>
    <div class="form-input form-group">
      <div class="label">
        <%= f.label :email %>
      </div>
      <div class="form">
        <%= f.email_field :email, class: 'form-control input-lg' %>
      </div>
    </div>

    <div class="form-input form-group">
      <div class="label">
        <%= f.label :password %>
      </div>
      <div class="form">
        <%= f.password_field :password, class: 'form-control input-lg' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit "Sign In", class: " btn-lg submit"%>
    </div>
    <div class="submit d-flex justify-content-between">
      <%= link_to "Forgot password?", new_password_reset_path%>
      <%= link_to "Don't have an account? Sign Up", new_user_path %>
    </div>
  </div>
<% end %>
</div>
