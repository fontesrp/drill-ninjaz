<hr>
<div class="container-fluid">
<h2> Password Reset </h2>
<%= simple_form_for @user, url: password_reset_path(current_user.id) do |f| %>
<div class="form-input form-group">
  <div class="label">
    <%= f.label :email %>
  </div>
  <div class="form">
    <%= f.email_field :email, class: 'form-control input-lg' %>
  </div>
</div>

<div class="form-input form-group">
  <div class="label">
    <%= f.label :password %>
  </div>
  <div class="form">
    <%= f.password_field :password, class: 'form-control input-lg' %>
  </div>
</div>

<div class="form-input form-group">
  <div class="label">
    <%= f.label :password_confirmation %>
  </div>
  <div class="form">
    <%= f.password_field :password_confirmation, class: 'form-control input-lg' %>
  </div>
</div>
<div class="container form-group">
  <%= f.submit class: 'btn-lg btn-block'%>
</div>
<% end  %>
</div>
