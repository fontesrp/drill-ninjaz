<hr>
<div class="container-fluid">
<h2>Reset Your Password</h2>
<h3>To reset your password, please insert your email</h3>
<%= form_for @user do |f| %>
  <div>
    <div class="form-input form-group">
      <div class="label">
        <%= f.label :email %>
      </div>
      <div class="form">
        <%= f.email_field :email, class: 'form-control input-lg' %>
      </div>
    </div>

    <div class="form-input form-group">
      <div class="label">
        <%= f.label :password %>
      </div>
      <div class="form">
        <%= f.password_field :password, class: 'form-control input-lg' %>
      </div>
    </div>
    <%= f.submit "Reset Your Password", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
